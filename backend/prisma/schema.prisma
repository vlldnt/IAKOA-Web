generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  name         String   @db.VarChar(30)
  password     String
  email        String   @unique
  isCreator    Boolean  @default(false)
  refreshToken String?  // Token de rafraîchissement hashé

  companies    String[] // FK vers Company.id (liste)
  favorites    String[] // FK vers Event.id (liste)

  @@map("users")
}
